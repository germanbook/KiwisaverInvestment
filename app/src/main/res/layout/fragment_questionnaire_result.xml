<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.questionnaire.QuestionnaireResultFragment">

    <TextView
        android:id="@+id/score_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textview_margin_super_large"
        android:gravity="center"
        android:padding="@dimen/main_view_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/total_score"
        android:textSize="@dimen/title_text_size_xlarge"
        android:textColor="@color/primary_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/result_score"
        android:layout_width="@dimen/btn_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textview_margin_xlarge"
        android:gravity="center"
        android:padding="@dimen/main_view_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/score_title"
        android:background="@color/white_dark"
        android:textSize="@dimen/title_text_size_xlarge"
        android:textColor="@color/primary_blue"
        android:textStyle="bold"
        tools:text="20" />

    <TextView
        android:id="@+id/investor_type_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textview_margin_xxlarge"
        android:gravity="center"
        android:padding="@dimen/main_view_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/result_score"
        android:text="@string/investor_type_title"
        android:textSize="@dimen/title_text_size_xlarge"
        android:textColor="@color/primary_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/investor_type_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/textview_margin_super_large"
        android:gravity="center"
        android:padding="@dimen/main_view_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/investor_type_title"
        android:textSize="@dimen/title_text_size_xlarge"
        android:textColor="@color/primary_blue"
        android:textStyle="bold"
        tools:text="Balanced Growth" />

    <Button
        android:id="@+id/btn_show_more"
        android:layout_width="@dimen/btn_width_large"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/investor_type_result"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/btn_show_more"
        android:textSize="@dimen/btn_text_size"
        tools:visibility="visible"/>


</androidx.constraintlayout.widget.ConstraintLayout>